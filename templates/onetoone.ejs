    <body>
        <div class="container py-5 px-4">
            <!-- For demo purpose-->
            <header class="text-center">
              <h1 class="display-4 text-white">MK Chat</h1>
            </header>
          
            <div class="row rounded-lg overflow-hidden shadow">
                <div class="col-md-5">
                    <div class="bg-white">
                        <div class="bg-gray px-4 py-2 bg-light">
                          <p class="h5 mb-0 py-1">Chat</p>
                        </div>
                        <div class="messages-box">
                          <div class="list-group rounded-0" id="userlist"></div>
                        </div>
                    </div>
                </div>
              <div class="col-md-7 px-0">
                <div class="chat-box px-4 py-5 chat-box mainchatboxwindows" id="main_msg_body" ></div>
                <div class="input-group">
                  <input type="text" id="textAreaExample" placeholder="Type a message" aria-describedby="button-addon2" class="form-control rounded-0 border-0 py-4 bg-light">
                  <div class="input-group-append">
                    <button id="button-addon2" type="button" id="senmessahe" class="btn btn-link"> <i class="fa fa-paper-plane" id="senmessahe"></i></button>
                  </div>
                </div>
              </div>
            </div>
          </div>
    </body>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/js/bootstrap.bundle.min.js"></script>

    <script>
        var socket = io();
        let allusers = []
        let currentMessage = []
        let MainUserId = null
        const username = '<%= username %>'
        console.log(username)
        socket.auth = { username };
        socket.connect();
        var input = document.getElementById('textAreaExample');
            socket.on('welcomemk', (_msg) => {
                console.log(_msg)
            })

            socket.on('chat_message', msg => {
                console.log(msg)
                if(msg.username == '<%= username %>') {
                $("#main_msg_body").append(`<div class="media  ml-auto w-50 mb-3">
                    <img src="https://bootstrapious.com/i/snippets/sn-chat/avatar.svg" alt="user" width="50" class="rounded-circle">
                    <div class="media-body ml-3">
                      <div class="bg-light rounded py-1 px-1 mb-1">
                        <p class="text-small mb-0 text-muted">you</p>
                        <h6  class="pl-1">${msg.msg}</h6>
                      </div>
                      <p class="small text-muted">${msg.sentdate}</p>
                    </div>
                  </div>`);
                } else {
                $("#main_msg_body").append(`<div class="media w-50 mb-3">
                    <img src="https://bootstrapious.com/i/snippets/sn-chat/avatar.svg" alt="user" width="50" class="rounded-circle">
                    <div class="media-body ml-3">
                      <div class="bg-light rounded py-1 px-1 mb-1">
                        <p class="text-small mb-0 text-muted">${msg.username}</p>
                        <h6 class="pl-1">${msg.msg}</h6>
                      </div>
                      <p class="small text-muted">${msg.sentdate}</p>
                    </div>
                  </div>`)
                }
                var scrollBottom = $("#main_msg_body").scrollTop() + $("#main_msg_body").height();
                $("#main_msg_body").scrollTop(scrollBottom)
            })

            socket.on("users", (users) => {
                users.forEach((user) => {
                    user.self = user.userID === socket.id;
                });
                // put the current user first, and then sort by username
                MainUserId = users.filter((x) => x.self)[0].userID;
                console.log(MainUserId)
                // console.log(allusers)
                $("#userlist").html('')
                users.forEach(element => {
                    if(!element.self){
                        $("#userlist").append(` <a class="list-group-item list-group-item-action list-group-item-light rounded-0">
                        <div class="media"><img src="https://bootstrapious.com/i/snippets/sn-chat/avatar.svg" alt="user" width="50" class="rounded-circle">
                        <div class="media-body ml-4">
                            <div class="d-flex align-items-center justify-content-between mb-1 chatprivatebtnclick" bodyiddata="${MainUserId+element.userID}" fromid="${element.userID}">
                            <h6 class="mb-0">${element.username} ${element.self?'(you)':''}</h6><small class="small font-weight-bold">30 Aug</small>
                            </div>
                        </div>
                        </div>
                    </a>`)
                }
                });
            });

            if('<%= username %>' == '' || '<%= username %>' == undefined) {
                window.location.assign('/')
            }

            // socket.emit("private message", {
            //   content,
            //   to: this.selectedUser.userID,
            // });

            socket.on("private_message", ({ content, from, to }) => {
              if(currentMessage[String(from)+String(to)].length) {
                currentMessage[String(from)+String(to)].push(content)
              } else {
                currentMessage[String(from)+String(to)] = []
              }
              console.log(currentMessage)
              // for (let i = 0; i < this.users.length; i++) {
              //   const user = this.users[i];
              //   if (user.userID === from) {
              //     user.messages.push({
              //       content,
              //       fromSelf: false,
              //     });
              //     if (user !== this.selectedUser) {
              //       user.hasNewMessages = true;
              //     }
              //     break;
              //   }
              // }
            });
            
            $(document).on("click",".chatprivatebtnclick", function(){
                $(".mainchatboxwindows").attr("id",$(this).attr('bodyiddata'))
                $("#senmessahe").attr('toooid', $(this).attr("fromid"))
            })

        $("#senmessahe").click(function(){
            let getmesg = $("#textAreaExample").val()
            $("#textAreaExample").val('')
            socket.emit('chat_message', {msg: getmesg, username: '<%= username %>', sentdate: new Date()})
        })
    </script>
</html>